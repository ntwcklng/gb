===LOCAL===
curl -L https://get.rvm.io | bash -s stable --ruby=2.0.0
gem install jekyll


===SERVER===
apt-get install git-core
JEKYLL

cd ~/
mkdir repos && cd repos
mkdir awesomeblog.git && cd awesomeblog.git
git init --bare

cd hooks
touch post-receive
nano post-receive

repos/glossboss.git/hooks/post-receive:

				#!/bin/bash -l
				GIT_REPO=$HOME/repos/glossboss.git
				TMP_GIT_CLONE=$HOME/tmp/git/glossboss
				PUBLIC_WWW=/var/www/vhosts/glossboss.de/_site
				PUBLIC_TARGET=/var/www/vhosts/glossboss.de/_site/*
				PUBLIC_DEPLOY=/var/www/vhosts/glossboss.de/httpdocs

				git clone $GIT_REPO $TMP_GIT_CLONE
				jekyll build --source $TMP_GIT_CLONE --destination $PUBLIC_WWW
				echo "Jekyll Build Fertig, kopiere Verzeichnis"
				cp -r $PUBLIC_TARGET $PUBLIC_DEPLOY
				echo "Kopieren fertig, l√∂sche Verzeichnisse"
				rm -Rf $TMP_GIT_CLONE
				rm -Rf $PUBLIC_WWW
				exit


chmod +x post-receive


