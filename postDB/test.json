---
---
{
  {% for cat in site.data.categories %}
    {% assign categoryName = cat.cat %}
    "{{categoryName}}": [
      {% for post in site.categories[{{categoryName}}] | limit: 17 %}
        {
          "title": "{{ post.title | escape }}",
          "url": "{{ post.url }}",
          "category": "{{post.categories[0]}}",
          "card": "{% include postDB.html %}"
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]{% unless forloop.last %},{% endunless %}
  {% endfor %}
}